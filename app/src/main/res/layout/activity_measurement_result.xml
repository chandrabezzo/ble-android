<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.measurement.MeasurementResultActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/measurements"
        app:titleTextColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_alignParentTop="true"/>

    <FrameLayout
        android:id="@+id/fl_measurement_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/bnv_measurement_result"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_measurement_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/measurement_menu"
        android:background="@color/colorPrimary"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>